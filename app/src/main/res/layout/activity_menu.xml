<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F7FB"
    android:padding="12dp">

    <!-- TÍTULO (PRIMERO) -->
    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menú del Día"
        android:textColor="#1A1A1A"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- BUSCADOR (DEBAJO DEL TÍTULO) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/searchContainer"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Buscar platos..."
        app:startIconTint="#1E88E5"
        app:boxStrokeColor="#1E88E5"
        app:hintTextColor="#1E88E5"
        app:layout_constraintTop_toBottomOf="@id/textView33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searchView_Menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- GRID 2x2 DE PLATOS -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentMenu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/searchContainer"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- CARD 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="6dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintWidth_percent="0.46"
            app:layout_constraintHeight_percent="0.48"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arroz con camarones"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/arroz_camarones"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$13"
                    android:textColor="#388E3C"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/select_op1"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="@string/select_op1"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#1E88E5"
                    app:iconTint="#FFFFFF"
                    app:iconGravity="textStart"
                    app:iconSize="14dp"
                    app:iconPadding="4dp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CARD 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="6dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintWidth_percent="0.46"
            app:layout_constraintHeight_percent="0.48"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filete de res y hongos"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/carne"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$10"
                    android:textColor="#388E3C"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/select_opc2"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="@string/select_opc2"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#1E88E5"
                    app:iconTint="#FFFFFF"
                    app:iconGravity="textStart"
                    app:iconSize="14dp"
                    app:iconPadding="4dp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CARD 3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="6dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintWidth_percent="0.46"
            app:layout_constraintHeight_percent="0.48"
            app:layout_constraintTop_toBottomOf="@id/card1"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pasta al pomodoro"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/pasta"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$10"
                    android:textColor="#388E3C"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/select_opc3"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="@string/select_opc3"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#1E88E5"
                    app:iconTint="#FFFFFF"
                    app:iconGravity="textStart"
                    app:iconSize="14dp"
                    app:iconPadding="4dp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CARD 4 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="6dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintWidth_percent="0.46"
            app:layout_constraintHeight_percent="0.48"
            app:layout_constraintTop_toBottomOf="@id/card2"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Costillitas y risotto"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/risottos"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$15"
                    android:textColor="#388E3C"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/select_opc4"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="@string/select_opc4"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#1E88E5"
                    app:iconTint="#FFFFFF"
                    app:iconGravity="textStart"
                    app:iconSize="14dp"
                    app:iconPadding="4dp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- BARRA INFERIOR FIJA -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:padding="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHome_Menu"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="@string/btnHome_Menu"
            android:textSize="12sp"
            android:textAllCaps="false"
            app:backgroundTint="#1E88E5"
            app:iconTint="#FFFFFF"
            app:iconGravity="top"
            app:iconPadding="2dp"
            app:cornerRadius="14dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnmenu_Menu"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="@string/btnmenu_Menu"
            android:textSize="12sp"
            android:textAllCaps="false"
            app:strokeColor="#1E88E5"
            app:strokeWidth="2dp"
            app:iconTint="#1E88E5"
            app:iconGravity="top"
            app:iconPadding="2dp"
            app:cornerRadius="14dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btncart_Menu"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="@string/btncart_Menu"
            android:textSize="12sp"
            android:textAllCaps="false"
            app:strokeColor="#1E88E5"
            app:strokeWidth="2dp"
            app:iconTint="#1E88E5"
            app:iconGravity="top"
            app:iconPadding="2dp"
            app:cornerRadius="14dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnProfile_Menu"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Perfil"
            android:textSize="12sp"
            android:textAllCaps="false"
            app:strokeColor="#1E88E5"
            app:strokeWidth="2dp"
            app:iconTint="#1E88E5"
            app:iconGravity="top"
            app:iconPadding="2dp"
            app:cornerRadius="14dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>