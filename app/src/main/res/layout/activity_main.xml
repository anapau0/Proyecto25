<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <!-- Logo con tarjeta flotante y sombra blanca suave -->
    <androidx.cardview.widget.CardView
        android:id="@+id/logoCard"
        android:layout_width="340dp"
        android:layout_height="400dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="20dp"
        app:cardBackgroundColor="#121212"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo3"
            android:scaleType="centerInside"
            android:padding="32dp"
            android:background="#000000"
            android:contentDescription="Logo de la App" />

    </androidx.cardview.widget.CardView>

    <!-- Título elegante (opcional, pero queda brutal) -->

    <!-- Botón Iniciar Sesión – MODERNO, GRANDE, CON ÍCONO -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNextLog_main"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/btnNextLog_main"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:backgroundTint="#00A86B"
        app:cornerRadius="22dp"
        app:iconGravity="textStart"
        app:iconPadding="16dp"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeWidth="0dp" />

    <!-- Botón Registrarse – ESQUINA SUPERIOR DERECHA, ESTILO CHIP PREMIUM -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegis_main"

        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="24dp"
        android:text="@string/btnRegis_main"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:backgroundTint="#00A86B"
        app:cornerRadius="18dp"

        app:iconGravity="textStart"
        app:iconPadding="12dp"
        app:iconTint="#1E88E5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#1E88E5"
        app:strokeWidth="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>